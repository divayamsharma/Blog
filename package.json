{
  "name": "dankoe-blog",
  "version": "1.0.0",
  "description": "A high-performance blog inspired by Dan Koe's design",
  "main": "index.js",
  "scripts": {
    "build": "npm run graph && /opt/homebrew/lib/ruby/gems/3.4.0/bin/jekyll build",
    "serve": "npm run graph && /opt/homebrew/lib/ruby/gems/3.4.0/bin/jekyll serve",
    "graph": "node scripts/generate-graph-data.js",
    "clean": "/opt/homebrew/lib/ruby/gems/3.4.0/bin/jekyll clean",
    "test": "npm run graph && /opt/homebrew/lib/ruby/gems/3.4.0/bin/jekyll build --strict_front_matter",
    "optimize": "npm run build && npm run optimize:css && npm run optimize:js",
    "optimize:css": "csso _site/assets/css/style.css -o _site/assets/css/style.css",
    "optimize:js": "terser _site/assets/js/main.js -o _site/assets/js/main.js && terser _site/assets/js/knowledge-graph.js -o _site/assets/js/knowledge-graph.js"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "csso-cli": "^4.0.1",
    "terser": "^5.20.0"
  },
  "keywords": [
    "jekyll",
    "blog",
    "github-pages",
    "knowledge-graph"
  ],
  "author": "",
  "license": "MIT"
}
